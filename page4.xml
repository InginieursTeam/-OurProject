<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bord2"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="Categories"
        android:textColor="@color/white"
        android:textFontWeight="1010"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/square3"
        android:layout_width="147dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/rounded_button_background"
        android:text="Sport "
        android:layout_below="@+id/square1"
        android:textColor="#131153"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/square2"
        android:layout_width="148dp"
        android:layout_height="70dp"
        android:layout_alignTop="@id/square1"
        android:layout_marginStart="28dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/square1"
        android:background="@drawable/rounded_button_background"
        android:text="Personal"
        android:textColor="#131153"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingStart="0dp"/>


    <Button
        android:id="@+id/square1"
        android:layout_width="147dp"
        android:layout_height="70dp"
        android:layout_marginTop="90dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/rounded_button_background"
        android:text="Business"

        android:textColor="#131153"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/square4"
        android:layout_width="147dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="225dp"
        android:background="@drawable/rounded_button_background"
        android:text="Study"
        android:layout_below="@+id/square2"
        android:textColor="#131153"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_menu"
        android:background="#97B5FE"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_3"
        android:layout_marginTop="300dp"/>

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_button"
        android:background="#97B5FE"
        android:onClick="onBackButtonClick"

        />

</RelativeLayout>
